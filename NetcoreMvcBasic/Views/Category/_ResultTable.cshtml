@model IEnumerable<NetcoreMvcBasic.Business.Entities.Category>
@{
    //ViewData["Title"] = "Home Page";
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table id="tblTable" class="table table-striped table-bordered">
                @if (Model.Count() > 0)
                {
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Danh Mục</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => p.category_id)</td>
                                <td style="width:60%">@Html.DisplayFor(x => p.category_name)</td>
                                <td style="width:25%" class="text-center">
                                    <a href="#" onclick="return getByID('@p.category_id')" class="btn btn-primary">Sửa</a>
                                    <a href="#" data-id="@p.category_id" class="btn btn-danger">Xóa</a>
                                    <a href="#" onclick="return getDetailId('@p.category_id')" class="btn btn-warning">Chi tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <h4 style="color:red">@Html.DisplayName("Không tìm thấy kết quả !")</h4>
                }
            </table>
            <ul class="pagination">
                @for (int i = 1; i <= @ViewBag.TotalPage; i++)
                {
                    @if (i != @ViewBag.CurrentPage)
                    {
                        <li class="page-item">
                            <a href="javascript:PagerClick(@i);" class="page-link">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item active">
                            <span><a href="#" class="page-link">@i</a></span>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript">
    function PagerClick(index) {
        showTable();
    }
</script>
